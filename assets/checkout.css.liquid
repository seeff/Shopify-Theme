@import url('https://fonts.googleapis.com/css?family=Montserrat');
/*@import url("{{'style.css' | asset_url }}");*/


#main { width: 776px; margin: 0px auto; position: relative; padding-bottom: 100px;}
#container { width: 100%; }
#header { width: 100%; padding: 0;}



/* Undo background and gradient */
body, #main, #container, #header, #footer {
  background: #fff !important;
  font-family: 'Montserrat', sans-serif;
  color: black !important;
}
h1,h2,h3,h4 { 
	font-weight: 400 !important;
	text-transform: uppercase;
	color: black;
}

#products {width: 50%;}
#wallet { background: none; }
.wallet-highlight { display: none; }
.wallet-highlight { background: none; }
div.wallet-highlight {
background: none; display: none;
}
#cost img {display: none; }
.group h3,
.pgroup h3,
#products h2 { 
	color: #898680;
	font-size: 25px;
	border-bottom: 1px solid #DDDDDD;
	margin-bottom: 10px;
	padding-bottom: 5px;
}
h1#tagline { 
	background: black;
	color: white !important;
	padding: 20px 0;
	margin-bottom: 20px;
}
h1 span.subtitle { color: white; font-size: 14px; }

.sign-in-message { 
	width: 42%; 
	float: right;
	margin-top: -28px;
}

#email { padding: 10px 0; }
#email label, 
#email input { float: left; width: 48%; }
#email input { clear: left; }

#email label {  display: block; float: none; width: 100%: }

#addresses { clear: both; padding: 40px 0; }

#customer-login-link {
	display: block;
	font-family: 'OswaldLight';
	background: url('sign-in.png') center center no-repeat;; 
	width: 320px;
	height: 39px;
	text-indent: -999px;
	overflow: hidden;
	margin-top: 15px;
	
}
#thumbs span { 
	color: black;
}
#cost, #order-num, #tax_span, #steps {
	font-family: 'Montserrat';
	color: black !important;
	font-style: normal;
}
#steps {
text-transform: uppercase;
	font-size: 14px;
	}

/* Undo overview background and borders */
#main #overview,
#email, #addresses, #buttons {
  background: #fff;
  border: none;
}
#main #overview > * {
  border: none;
}
#main #thumbs div {
  border: none;
}

/* Insert your own logo (upload separately) */
#logo { 
  width: 250px;
  height: 115px;
  background: url({{ 'UNYQ-logo2.svg' | asset_url }}) center no-repeat;
  background-size: contain;
  margin: 0px auto;
}

#header > h1{
  text-align:center;
}

/* Hide the name of the store because we got this nifty logo now */

#header > h1 span.title {
  display:none;
}

label,
.sign-in-message { font-weight: 400; text-transform: uppercase; font-size: 14px !important; color: #898680; display: block;}

input[type=text], input[type=email] {
	padding: 7px;
	border: 1px solid #ccc;
}
.form td { vertical-align: middle; }
.form td input.short, .form td input { width: 95%; }

#email:after {
 content: '';
 clear: both;
 display: block;
 width: 100%;
}

#addresses { 
	clear: both;
	border-top: 1px solid black;
	padding-top: 40px;
	margin-top: 20px;	
}

.gright { float: right; margin-left: 0; }

#buttons { padding: 0; }

#buttons input[type=submit] {
	background: none repeat scroll 0 0 #000;
	padding: 20px; 
	text-align: center;
	font-weight: 700;
	font-size: 15px;
	text-transform: uppercase;
	border: 0;
	display: inline-block; 
	color: white;
}
#buttons #commit-button { 
	background: url('next-step.png') center center no-repeat; 
	display: block;
	width: 370px; 
	height: 50px;
	overflow: hidden;
	text-indent: 999px;
	margin-bottom: 10px;
}
#cancel-purchase,
#cancel-purchase a {
	text-transform: uppercase;
	color: #9a9893;
}

#gateway-logos { display: none; }

.group { border-radius: 0; -moz-border-radius: 0; }

.gright { width: 41%; }

table { width: 100%; }

.group table tr td,
.form td.lbl { display: block; width: 100% !important; padding: 2px 0;}



#credit-cards label,
#paypal-payments label{ display: inline }


#credit-card-info table tr td{ display: table-cell; width: 50%; }