{% comment %}
<div id="mainslider" class="flexslider cf hidemobile">
  <ul class="slides">
    <li>
      <a href="{{hero_link}}">
        {% capture hero_tag %}UNYQ {{hero_h1}} - {{hero_sub}}{% endcapture %}
        {{ 'slideshow_1.jpg' | asset_url | img_tag: hero_tag }}
