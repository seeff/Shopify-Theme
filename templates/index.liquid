<div id="testimonials">
  <div class="testimonials cf">
  <div class="flexslider">
      <ul class="slides">
        {% for article in blogs.reviews.articles %}
          <li>
              <div class="testimonial" itemscope itemtype="http://data-vocabulary.org/Review">
                <div class="test-content">
                <span class="hidden" itemprop="itemreviewed">{{hero_h1}}</span>
                
                <time class="hidden" itemprop="dtreviewed" datetime="{{article.published_at}}">{{article.published_at}}</time>
                <span class="hidden" itemprop="summary">{{article.content}}</span>
                <span itemprop="description">{{article.content}}</span>
        <span class="hidden" itemprop="rating">5.0</span>
                <span class="reviewer" itemprop="reviewer">- {{article.title}}</span>
                </div>
                <div class="test-image">{{ article.excerpt }}</div>
              </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>


