{% layout settings.customer_layout %}
<div id="customer-wrapper" class="c cf">

<div id="admin_header">
  <div class="action_link action_return note" id='return_to_account'><a href="/account">{{addresses_return}}</a></div>
  <h2 class="title">{{addresses_title}}</h2>
  <div class="action_top">
    <div id="action" class="action_link action_add note"><a class="add-new-address" href="#" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{{addresses_add_new}}</a></div>
  </div>
</div>

<div id="add_address" class="customer_address edit_address" style="display:none;">
  {% form 'customer_address', customer.new_address %}
  <h4 class="hidden" id="add_address_title">{{addresses_add_new}}</h4>
    <table class="customer_address_table">
      <tr>
        <td class="label"><label for="address_first_name_new">{{addresses_firstname}}</label></td>
        <td class="value"><input type="text" id="address_first_name_new" class="address_form" name="address[first_name]" value="{{form.first_name}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_last_name_new">{{addresses_lastname}}</label></td>
        <td class="value"><input type="text" id="address_last_name_new" class="address_form" name="address[last_name]" value="{{form.last_name}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_company_new">{{addresses_company}}</label></td>
        <td class="value"><input type="text" for="address_company_new" class="address_form" name="address[company]" value="{{form.company}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_address1_new">{{addresses_address1}}</label></td>
        <td class="value"><input type="text" id="address_address1_new" class="address_form" name="address[address1]" value="{{form.address1}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_address2_new">{{addresses_address2}}</label></td>
        <td class="value"><input type="text" id="address_address2_new" class="address_form" name="address[address2]" value="{{form.address2}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_city_new">{{addresses_city}}</label></td>
        <td class="value"><input type="text" id="address_city_new" class="address_form" name="address[city]" value="{{form.city}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_country_new">{{addresses_country}}</label></td>
        <td class="value">
          <select id="address_country_new" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
        </td>
      </tr>
      <tr id="address_province_container_new" style="display:none">
        <td class="label"><label for="address_province_new">{{addresses_province}}</label></td>
        <td class="value">
          <select id="address_province_new" class="address_form" name="address[province]" data-default="{{form.province}}"></select>
        </td>
      </tr>
      <tr>
        <td class="label"><label for="address_zip_new">{{addressses_zip}}</label></td>
        <td class="value"><input type="text" id="address_zip_new" class="address_form" name="address[zip]" value="{{form.zip}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"><label for="address_phone_new">{{addresses_phone}}</label></td>
        <td class="value"><input type="text" id="address_phone_new" class="address_form" name="address[phone]" value="{{form.phone}}" size="40" /></td>
      </tr>
      <tr>
        <td class="label"></td>
        <td class="value">{{ form.set_as_default_checkbox }}{{addresses_set_default_msg}}</td>
      </tr>
    </table>
    <div class="action_bottom">
      <input class="secondary btn" type="submit" value="{{addresses_submit}}" />
      <span class="note"> or <a href="#" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{{addresses_cancel}}</a></span>
    </div>
  {% endform %}
</div>

<div id="address_tables">  
{% paginate customer.addresses by 12 %}
  
  {% for address in customer.addresses %}
  <div class="address_table four columns">
    <div id="view_address_{{address.id}}" class="customer_address">
        
      
      
      <div class="view_address">
        <p>{{ address.first_name }} {{address.last_name }}</p>
        <p>{{ address.company }}</p>
        <p>{{ address.street }}</p>
        <p>{{ address.city }} {% if address.province_code %}, {{ address.province_code }}{% endif %}</p>
        <p>{{ address.country }} {{ address.zip }}</p>
        <p>{{ address.phone }}</p>
      </div>
      <p class="address_actions">
        {% if address == customer.default_address %}<span class="default_address note">({{addresses_default_set}})</span><br/>{% endif %}
        <span class="action_link action_edit">{{ addresses_edit_button | edit_customer_address_link: address.id }}</span>
        <span class="action_link action_delete">{{ addresses_delete_button | delete_customer_address_link: address.id }}</span>
      </p>
    </div>    
    
  </div><!-- end .address_table -->
  <div id="edit_address_{{address.id}}" class="customer_address edit_address" style="display:none;">
      {% form 'customer_address', address %}
        <table class="customer_address_table">
          <tr>
            <td class="label"><label for="address_first_name_{{form.id}}">{{addresses_firstname}}</label></td>
            <td class="value"><input type="text" id="address_first_name_{{form.id}}" class="address_form" name="address[first_name]" value="{{form.first_name}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_last_name_{{form.id}}">{{addresses_lastname}}</label></td>
            <td class="value"><input type="text" id="address_last_name_{{form.id}}" class="address_form" name="address[last_name]" value="{{form.last_name}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_company_{{form.id}}">{{addresses_company}}</label></td>
            <td class="value"><input type="text" id="address_company_{{form.id}}" class="address_form" name="address[company]" value="{{form.company}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_address1_{{form.id}}">{{addresses_address1}}</label></td>
            <td class="value"><input type="text" id="address_address1_{{form.id}}" class="address_form" name="address[address1]" value="{{form.address1}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_address2_{{form.id}}">{{addresses_address2}}</label></td>
            <td class="value"><input type="text" id="address_address2_{{form.id}}" class="address_form" name="address[address2]" value="{{form.address2}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_city_{{form.id}}">{{addresses_city}}</label></td>
            <td class="value"><input type="text" id="address_city_{{form.id}}" class="address_form" name="address[city]" value="{{form.city}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_country_{{form.id}}">{{addresses_country}}</label></td>
            <td class="value">
              <select id="address_country_{{form.id}}" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
            </td>
          </tr>
          <tr id="address_province_container_{{form.id}}" style="display:none">
            <td class="label"><label for="address_province_{{form.id}}">{{addresses_province}}</label></td>
            <td class="value"><select id="address_province_{{form.id}}" class="address_form" name="address[province]" data-default="{{form.province}}"></select></td>
          </tr>
          <tr>
            <td class="label"><label for="address_zip_{{form.id}}">{{addresses_zip}}</label></td>
            <td class="value"><input type="text" id="address_zip_{{form.id}}" class="address_form" name="address[zip]" value="{{form.zip}}" size="40" /></td>
          </tr>
          <tr>
            <td class="label"><label for="address_phone_{{form.id}}">{{addresses_phone}}</label></td>
            <td class="value"><input type="text" id="address_phone_{{form.id}}" class="address_form" name="address[phone]" value="{{form.phone}}" size="40" /></td>
          </tr>      
          <tr>
            <td class="label"></td>
            <td class="value">{{ form.set_as_default_checkbox }} &nbsp;{{addresses_set_default_msg}}</td>
          </tr>
        </table>
        <div class="action_bottom">
          <input class="secondary btn" type="submit" value="{{addresses_update}}" />
          <span class="note"> or <a href="#" onclick="Shopify.CustomerAddress.toggleForm({{form.id}}); return false;">{{addresses_cancel}}</a></span>
        </div>        
      {% endform %}
    </div>
  {% endfor %}
  
  <div id="address_pagination">{{ paginate | default_pagination }}</div>  
{% endpaginate %}
</div><!-- end #address_tables -->
</div>
<script type="text/javascript" charset="utf-8">
  // initialize observers on address selectors
  new Shopify.CountryProvinceSelector('address_country_new', 'address_province_new', {hideElement: 'address_province_container_new'});  
  {% for address in customer.addresses %}
    new Shopify.CountryProvinceSelector('address_country_{{address.id}}', 'address_province_{{address.id}}', {hideElement: 'address_province_container_{{address.id}}'});
  {% endfor %}
</script>